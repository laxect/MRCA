# Maintainer: Gyara <laxect39@gmail.com>

pkgname=hyouka-git
_pkgname=hyouka
pkgver=r11.a40dff8
pkgrel=2
pkgdesc="manage blog post in cli"
url="https://github.com/laxect/hyouka"
depends=('cargo')
makedepends=('git')
arch=('i686' 'x86_64')
license=('GPLv3')
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname/"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$_pkgname/"
  cargo build --release --out-dir=target -Z unstable-options
}

package() {
  cd "$srcdir/$_pkgname/"
  install -Dm755 "target/hyouka" "$pkgdir/usr/bin/hyouka"
  install -Dm755 "_hyouka" "$pkgdir/usr/share/zsh/site-functions/_hyouka"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
